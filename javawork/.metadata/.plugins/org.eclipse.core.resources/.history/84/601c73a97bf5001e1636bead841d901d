			@Override
			public void actionPerformed(ActionEvent e) {
				// TODO Auto-generated method stub
				genderIndex = idx + 1;
				writeSawon();
			}
		});
		rbFemale.addActionListener(new ActionListener() {

			@Override
			public void actionPerformed(ActionEvent e) {
