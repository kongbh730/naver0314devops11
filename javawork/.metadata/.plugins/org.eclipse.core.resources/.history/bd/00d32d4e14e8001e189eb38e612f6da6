package day0322;

public class Sawon 
{
	private String name;
	private int gibon;
	private int sudang;
	
	//메서드가 public이 맞네. 왜냐면 외부에서 접근이 가능해야 하니까
	//setter method
	public void setName(String name)
	{
		this.name = name;
	}
	public void setGibon(int gibon)
	{
		this.gibon = gibon;
	}
	public void setSudang(int sudang)
	{
		this.sudang = sudang;
	}
	
	//getter method
	public String getName()
	{
		//return this.name;
		return name;
	}
	public int getGibon()
	{
		//return this.gibon;
		return gibon;
	}
	public int getSudang()
	{
		//return this.sudang;
		return sudang;
	}
	
	
}
